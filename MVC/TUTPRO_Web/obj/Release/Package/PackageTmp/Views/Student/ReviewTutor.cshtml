@using TUTPRO_Web.ViewModel
@model TUTPRO_Web.ViewModel.ReviewVM
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>About</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="~/Content/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Noto+Serif:ital@1&display=swap" rel="stylesheet">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
</head>
<body style="background-color: #F8F9FA;">
    @using (Html.BeginForm())
    {
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="#"><img src="~/Images/newlogo-removebg-preview2.png" /></a>

            <div class="collapse navbar-collapse" id="navbarSupportedContent" style="padding-left: 5em;">
                <ul class="navbar-nav mr-auto" style="justify-content:space-around; width: 40vw; ">
                    <li class="nav-item">
                        <a class="nav-link effect-underline" href="@Url.Action("Home", "Student")">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link effect-underline" href="@Url.Action("Profile", "Student")">My Profile</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link effect-underline" href="@Url.Action("Contact", "Student")">Contact</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link effect-underline" href="@Url.Action("About", "Student")">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link effect-underline" href="@Url.Action("Booking", "Student")">Bookings</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link effect-underline" href="@Url.Action("googleDrive", "Student")">Resources</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link effect-underline" href="@Url.Action("ReviewTutor", "Student")">Review Tutor</a>
                    </li>

                </ul>
                <div style="width: 10%" />
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item" style="text-decoration:none;">
                        <a class="nav-link effect-underline" href="@Url.Action("Index", "Home")"><b>Sign Out</b></a>
                    </li>
                </ul>
            </div>
        </nav>

        <div class="homeFirstDiv" style="padding-top: 5%;">
            <div class="row">
                <div class="col-12 col-sm-12 col-md-6 col-lg-6 order-last">
                    <div><img src="~/Images/book-reading rm bg.png" style="float: right; padding-right: 50%; height: 400px; margin-top: -20px"> </div>
                </div>
                <div class="col-12 col-sm-12 col-md-6 col-lg-6" style="padding-left: 20%;">
                    <h1>Review Tutor</h1>
                    <br />
                    <h4>Feel free to review our Tutors and give a rating out of 5!</h4>
                    <br>
                    <div>

                        <div class="form-group">
                            <label style="" for="degree">Tutor: </label>
                            @Html.DropDownListFor(b => b.TutorID, Model.TutorList)
                        </div>
                        <label>Rating:</label>
                        @Html.TextBox("StarRating", null, new { @class = "form-control", @type = "number", required = "required", min = "0", max = "5", @style = "width:9em" })
                        <br />
                        <h5>Leave a Comment for the Tutor:</h5>
                        <label>Comments</label>
                        @Html.TextBox("Message", null, new { @class = "form-control", @type = "text", required = "required", @style= " height:8em" })
                        @*<textarea style="width:20vw; height: 10vh"></textarea>*@
                        <br />
                        <button class="btn btn-dark" type="submit" name="rating">Submit Rating</button>

                    </div>


                </div>
            </div>
        </div>
    }
</body>
</html>
