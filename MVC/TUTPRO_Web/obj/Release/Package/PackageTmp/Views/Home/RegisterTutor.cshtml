@using TUTPRO_Web.ViewModel
@{
    Layout = null;
}

@model TutorVM

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.5.1.js" integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc=" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <link rel="stylesheet" type="text/css" href="~/Content/style.css">
    <Style>
        input::-webkit-outer-spin-button,
        input::-webkit-inner-spin-button {
            -webkit-appearance: none;
            margin: 0;
        }

        label, input {
            display: inline-block !important
        }
    </Style>
</head>
<body style="background-image: url('../Images/building_bg.png')">
    @using (Html.BeginForm("RegisterTutor", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div style="background-color: transparent; height:18vh;">
            <img src="~/Images/newlogo-removebg-preview2.png" class="logocompanyReg" style="padding-bottom:2em">
        </div>

        <div class="row" style="padding-top:3em; width:100vw">
            <br />
            <div style="width:20vw; padding-left:3em; color:white">
                <div id="RegName">
                    <label>Name</label>
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @type = "text" })
                    @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                    <br>
                    <label style="color:white">Surname</label>
                    @Html.TextBoxFor(m => m.Surname, new { @class = "form-control", @type = "text" })
                    @Html.ValidationMessageFor(m => m.Surname, "", new { @class = "text-danger" })
                    <br>
                </div>
                <label>Email</label>
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @type = "email" })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                <br>
                <label>UserName</label>
                @Html.TextBoxFor(m => m.Username, new { @class = "form-control", @type = "text" })
                @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                <br>
                <label>Password</label>
                @Html.TextBoxFor(m => m.Password, new { @class = "form-control", @type = "password" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                <br>
                <label>Confirm Password</label>
                @Html.TextBoxFor(m => m.ConfirmPassword, new { @class = "form-control", @type = "password" })
                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                <br>
                <label>Phone Number</label>
                @Html.TextBoxFor(m => m.Number, new { @class = "form-control", @type = "number", min = "0" })
                @Html.ValidationMessageFor(m => m.Number, "", new { @class = "text-danger" })
                <br>
                <label>Upload Files: </label>
                @Html.TextBoxFor(m => m.uploadFile, "", new { @type = "file", @multiple = "multiple", name = "uploadFile" })
                @Html.ValidationMessageFor(m => m.uploadFile, "", new { @class = "text-danger" })


            </div>


            <div style="padding-left: 10%; width:50vw">
                <div class="" style="padding-top: 5%; color:white">
                    <h1>Qualification Documents required</h1>
                    <p>Please select the following documents to upload to verify your qualifications and identity as a tutor:</p> <br>
                    <p>ID copy</p> <p>Academic Records</p> <p>Proof of Registration with University Or Highschool</p>
                </div>
                <button class="btn btn-dark" type="submit" name="registerprofile">Register</button>
                <br />
                <div>
                    <br />
                    <a href="@Url.Action("Index", "Home")" style="color: white;">Already Have an Account?</a>
                </div>

            </div>


        </div>

    }
</body>
</html>
