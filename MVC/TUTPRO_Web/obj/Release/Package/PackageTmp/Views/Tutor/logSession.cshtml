
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>About</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="~/Content/style.css">
    <link href="https://fonts.googleapis.com/css2?family=Noto+Serif:ital@1&display=swap" rel="stylesheet">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
</head>
<body style="background-color: #F8F9FA;">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#"><img src="~/Images/newlogo-removebg-preview2.png" /></a>

        <div class="collapse navbar-collapse" id="navbarSupportedContent" style="padding-left: 5em;">
            <ul class="navbar-nav mr-auto" style="justify-content:space-around; width: 40vw; ">
                <li class="nav-item">
                    <a class="nav-link effect-underline" href="@Url.Action("Home", "Tutor")">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link effect-underline" href="@Url.Action("Profile", "Tutor")">My Profile</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link effect-underline" href="@Url.Action("Contact", "Tutor")">Contact</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link effect-underline" href="@Url.Action("About", "Tutor")">About</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link effect-underline" href="@Url.Action("googleDrive", "Tutor")">Resources</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link effect-underline" href="@Url.Action("LogSession", "Tutor")">LogSession</a>
                </li>

            </ul>
            <div style="width: 10%" />
            <ul class="navbar-nav mr-auto">
                <li class="nav-item" style="text-decoration:none;">
                    <a class="nav-link effect-underline" href="@Url.Action("Index", "Home")"><b>Sign Out</b></a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="homeFirstDiv" style="padding-top: 5%;">
        <div class="row">
            <div class="col-12 col-sm-12 col-md-6 col-lg-6 order-last" style="top:0; padding-top: 0;">
                <div>
                    <form action="@Url.Action("logSession","Tutor")">
                        
                        <h3>Optional Demerit Assignment:</h3>
                        <br />
                        <label for="studentDemerit" style="padding-right:1em">Input Student ID: </label><br />
                        <input type="text" class="form-control" id="studentDemerit" style="width:10vw; position: relative;" placeholder="Student ID" aria-label="Recipient's username" aria-describedby="basic-addon2" required>
                        <br />
                        <label for="textareabox">Comments:</label><br />
                        <textarea class="teacherId" id="textareabox" required> </textarea> <br /><br />
                        <button href="@Url.Action("logSession", "Tutor")" type="btn" class="btn btn-primary">Add</button>
                    </form>
                </div>
            </div>
            <div class="col-12 col-sm-12 col-md-6 col-lg-6" style="padding-left: 10%;">
                <h1> Log Session</h1>   
                <div>
                    <form action="@Url.Action("LogSuccess","Tutor")">
                        <label for="tutorIDadd" style="padding-right:1em">Input Tutor ID: </label><br />
                        <input class="form-control" style="width:10vw" type="text" id="tutorIDadd" name="first_name" placeholder="Input Teacher ID" required>
                        <br />
                        Session start:
                        <input class="form-control" style="width:8vw" type="time" id="start" name="start" min="7:00" max="18:00" required><br>
                        Session end:
                        <input class="form-control" style="width:8vw" type="time" id="end" name="end" min="8:00" max="19:00" required><br>
                        <label for="studentadd" style="padding-right:1em">Input student ID's: </label><br />
                        <input type="text" id="studentadd" class="form-control" placeholder="Student ID" aria-label="Recipient's username" aria-describedby="basic-addon2" style="max-width:12vw;" required>
                        <br>
                        <button href="@Url.Action("LogSuccess", "Tutor")" type="btn" class="btn btn-primary">Add</button>
                    </form>            
                </div>
            </div>
        </div>
    </div>
</body>
</html>
