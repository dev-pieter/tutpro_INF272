
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Database</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="~/Content/style.css">
    <link href="https://fonts.googleapis.com/css2?family=Noto+Serif:ital@1&display=swap" rel="stylesheet">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="stylesheet" href="path/to/font-awesome/css/font-awesome.min.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#"><img src="~/Images/newlogo-removebg-preview2.png" /></a>

        <div class="collapse navbar-collapse" id="navbarSupportedContent" style="padding-left: 5em;">
            <ul class="navbar-nav mr-auto" style="justify-content:space-around; width: 40vw; ">
                <li class="nav-item">
                    <a class="nav-link effect-underline" href="@Url.Action("Reports", "Admin")">Reports <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link effect-underline" href="@Url.Action("Database", "Admin")">Database</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link effect-underline" href="@Url.Action("tutorApplications", "Admin")">Tutor Applications</a>
                </li>
            </ul>
            <div style="width:10%" />
            <ul class="navbar-nav mr-auto">
                <li class="nav-item" style="text-decoration:none;">
                    <a class="nav-link effect-underline" href="@Url.Action("Index", "Home")"><b>Sign Out</b></a>
                </li>
            </ul>
        </div>
    </nav>

    <div style="width:60%; padding-left:4em; padding-top:2em">
        <h3>Table List</h3>
        @using (Html.BeginForm("GetSelectedDatabase", "Database", FormMethod.Post))
        {@Html.DropDownList("Database", new List<SelectListItem>
              {
                new SelectListItem{Text = "Users" , Value ="User" },
                new SelectListItem{Text = "Reviews" , Value ="Review" },
                new SelectListItem{Text = "Applications" , Value ="Application" },
                new SelectListItem{Text = "Demerits" , Value ="Demerit" },
                new SelectListItem{Text = "Resources" , Value ="Resource" },
                new SelectListItem{Text = "Admin" , Value ="Admin" },
                new SelectListItem{Text = "Highschool Student" , Value ="HighSchool" },
                new SelectListItem{Text = "University Students" , Value ="University" }
              }, "Select Database")
        <input type="submit" value="Submit" />
    }
    </div>

    <div style="max-width: 100vw; ">
        <img src="~/Images/datafoot.png" / style="width:100vw; height:60vh ">
    </div>
</body>
</html>
