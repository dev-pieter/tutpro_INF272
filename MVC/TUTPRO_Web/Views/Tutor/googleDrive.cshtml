@using TUTPRO_Web.ViewModel;
@{
    Layout = null;
}

@model UploadVM

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GoogleDrive</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="~/Content/style.css">
    <link href="https://fonts.googleapis.com/css2?family=Noto+Serif:ital@1&display=swap" rel="stylesheet">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="stylesheet" href="path/to/font-awesome/css/font-awesome.min.css">
</head>
<body style="background-color: #F8F9FA;">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#"><img src="~/Images/newlogo-removebg-preview2.png" /></a>

        <div class="collapse navbar-collapse" id="navbarSupportedContent" style="padding-left: 5em;">
            <ul class="navbar-nav mr-auto" style="justify-content:space-around; width: 40vw; ">
                <li class="nav-item">
                    <a class="nav-link effect-underline" href="@Url.Action("Home", "Tutor")">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link effect-underline" href="@Url.Action("Profile", "Tutor")">My Profile</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link effect-underline" href="@Url.Action("Contact", "Tutor")">Contact</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link effect-underline" href="@Url.Action("About", "Tutor")">About</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link effect-underline" href="@Url.Action("googleDrive", "Tutor")">Resources</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link effect-underline" href="@Url.Action("LogSession", "Tutor")">LogSession</a>
                </li>

            </ul>
            <div style="width: 10%" />
            <ul class="navbar-nav mr-auto">
                <li class="nav-item" style="text-decoration:none;">
                    <a class="nav-link effect-underline" href="@Url.Action("Index", "Home")"><b>Sign Out</b></a>
                </li>
            </ul>
        </div>
    </nav>

    @using (Html.BeginForm("googleDrive", "Tutor", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="gDriveDiv" style="background-color: #F8F9FA; padding-top: 5%;">
            <h1>Download resources available</h1>
            <p>All due to various donations and sharing from the community!! As well as our generous Tutors!</p>
            <iframe src="https://drive.google.com/embeddedfolderview?id=16USC05QVt_BDBveklu8qfR5mmiLHtkX2#list" style="width:100%; height:200px; border:0;"></iframe>

        </div>
        <div class="gDriveDiv" style="background-color: #F8F9FA;">
            <h1>Upload resources to help out!!</h1>
            <p>Select a file:</p>
            @Html.TextBoxFor(m => m.uploadFile, "", new { @type = "file", @multiple = "multiple", name = "uploadFile" })
            @Html.ValidationMessageFor(m => m.uploadFile, "", new { @class = "text-danger" })
            <br />
            <form action="@Url.Action("ThankyouUpload", "Tutor")" style="display: inline-block;">
                <input class="btn btn-dark" type="submit" name="fileupload" value="Upload">
            </form>
        </div>
    }



</body>
</html>
